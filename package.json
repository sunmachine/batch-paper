{
  "name": "batch-paper",
  "version": "1.0.0",
  "description": "CLI tool for batch image processing",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "packageManager": "pnpm@10.3.0",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "package": "PYTHON=/usr/local/bin/python3 pnpm run build && PYTHON=/usr/local/bin/python3 DEBUG=nexe* nexe dist/index.js -t mac-x64-22.14.0 --build",
    "package:win": "PYTHON=/usr/local/bin/python3 pnpm run build && PYTHON=/usr/local/bin/python3 DEBUG=nexe* nexe dist/index.js -t windows-x64-22.14.0 --build",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "pkg": {
    "targets": [
      "node22-macos-x64",
      "node22-win-x64"
    ],
    "scripts": "",
    "assets": [
      "assets/**/*",
      "node_modules/sharp/**/*"
    ],
    "outputPath": "executables"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "glob": "^11.0.1",
    "pdf-lib": "^1.17.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@yao-pkg/pkg": "^6.3.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "nexe": "^4.0.0-rc.2",
    "prettier": "^3.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}