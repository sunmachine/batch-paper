{
  "name": "batch-paper",
  "version": "1.0.0",
  "description": "CLI tool for batch image processing",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "package": "pkg .",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "pkg": {
    "targets": [
      "node20-macos-x64",
      "node20-win-x64"
    ],
    "outputPath": "executables"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "glob": "^11.0.1",
    "imagemagick": "^0.1.3",
    "pdf-lib": "^1.17.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/imagemagick": "^0.0.35",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "pkg": "^5.8.1",
    "prettier": "^3.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}